#histories
	padding 60px 0
.history
	border: 1px solid #e8e8e8;
	border-radius: 5px;
	background-color: #fff;
	position: relative;
	height: 320px;
	padding: 25px;
	margin: 0 auto 55px;
	&:after
		content: '';
		display: block;
		width: 30px;
		height: 30px;
		border-top: 1px solid #e8e8e8;
		border-right: 1px solid #e8e8e8;
		background-color: #fff;
		position: absolute;
		top: -15px;
		left: 65px;
		-webkit-transform: rotate(-45deg);
		transform: rotate(-45deg);
.history_img
	border-radius: 50%;
	width: 161px;
	height: 161px;
	float left
	margin 0 20px 10px 0
.history_title
	font-size: 22px;
	font-family: "HelveticaNeueCyrBold", sans-serif;
	color: #252525;
	margin-bottom: 15px
.history_text 
	font-size: 16px;
	font-family: "HelveticaNeueCyrItalic",sans-serif;
	color: rgba(37,37,37,.8);
	line-height: 1.7;
	margin-bottom: 10px
.history_more_button
	position: absolute
	bottom 20px;
	right 20px
	background-color: transparent
	border-bottom: 1px dashed
	font-size: 16px
.history_modal-content
	.close
		top 20px
	.modal-title
		font-size: 24px;
		font-family: 'HelveticaNeueCyrBold', sans-serif;
		margin-bottom: 0
	h5
		font-size: 20px;
		font-family: 'HelveticaNeueCyrBold', sans-serif;
		margin-bottom: 20px
	p
		font-size: 18px
		font-family: 'HelveticaNeueCyrRoman', sans-serif;
		margin-bottom: 15px
		line-height: 1.5