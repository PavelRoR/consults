#cons_skills
	padding 60px 0
	background-color #fff
.skills_list
	width 100%
	max-width 850px
	margin 0 auto 60px
	li
		position relative
		list-style: none
		padding-left: 16px
		margin-bottom: 20px
		font-size: 18px
		font-family: 'HelveticaNeueCyrRoman';
		&:before
			content ''
			display block
			position: absolute
			top 10px
			left 0
			border-radius: 50%
			background-color: #4745d7
			height 7px
			width 7px
#cons_requests
	padding 60px 0
.cons_requests_general_title
	small
		display block
		font-size: 60%
.requests_list
	width 100%
	max-width 400px
	margin 0 auto 60px
	li
		list-style none
		font-size: 18px
		margin-bottom: 20px
		i
			color #1e1cfb
			margin-right: 15px
			font-size: 20px
			vertical-align: bottom;
#cons_biography
	padding 60px 0
	background-color #fff
.biography_img
	float left
	margin: 0 25px 25px 0
