#cons_skills
	padding 60px 0
	background-color #fff
.skills_list
	width 100%
	max-width 650px
	margin 0 auto 60px
	li
		position relative
		list-style: none
		padding-left: 16px
		margin-bottom: 20px
		font-size: 18px
		font-family: 'HelveticaNeueCyrRoman', sans-serif;
		&:before
			content ''
			display block
			position: absolute
			top 10px
			left 0
			border-radius: 50%
			background-color: #4745d7
			height 7px
			width 7px
#cons_requests
	padding 60px 0
.cons_requests_general_title
	small
		display block
		font-size: 60%
.requests_list
	width 100%
	max-width 400px
	margin 0 auto 60px
	li
		list-style none
		font-size: 18px
		margin-bottom: 20px
		i
			color #1e1cfb
			margin-right: 15px
			font-size: 20px
			vertical-align: bottom;
#cons_biography
	padding 60px 0
	background-color #fff
.biography_img
	float left
	margin: 0 25px 25px 0
.biography_text
	margin-bottom: 20px
	font-size: 18px
	font-family: 'HelveticaNeueCyrRoman', sans-serif;
	text-indent: 20px
.biography_list
	margin -15px 0 35px 30px
	li
		margin-bottom: 10px
		list-style none
		font-size: 17px
		font-family: 'HelveticaNeueCyrItalic', sans-serif;
		position relative
		padding-left: 11px
		&:before
			content ''
			position: absolute
			border-radius: 50%
			background-color: #1e1cfb
			width: 5px
			height 5px
			top 11px
			left 0
.cert_img
.rev_img
	width: 100%;
	object-fit: contain;
	display: block;
	margin: 0 auto 20px;
	height: 191px;
.buttom_main_cons
	margin-bottom: 0
.buttom_reqs
	margin 60px auto 0
.video_wrapper_spec_preveiw
	max-width 480px
	margin 0 auto 20px
#all_certs
	display: none
	padding-top: 20px
.all_certs_button
	background-color: transparent
	border: 2px solid rgba(#252525, .8)
	background-image: none
	display block
	color rgba(#252525, .8)
	margin 0 auto
.requests_list_more
	font-size: 16px
	font-family: 'HelveticaNeueCyrItalic', sans-serif;
	color #aaa
	display: inline-block
	border-bottom: 1px dashed 
	cursor pointer
	line-height: 1.3
.requests_inner_list
	display: none
	padding-left: 40px
	padding-top: 6px
	margin-bottom: 0
	li
		list-style none
		font-size: 16px
		font-family: 'HelveticaNeueCyrLight', sans-serif;
		margin-bottom: 10px
		padding-left:  15px
		position relative
		line-height: 1.2
		&:before
			content '+'
			position: absolute
			width 9px
			height 9px
			top: 0
			left 0
			color #1e1cfb
		&:last-child
			margin-bottom: 0