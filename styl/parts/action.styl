#action
    padding 60px 0
    background-image: url("../img/main_bg.jpg")
    background-repeat no-repeat
    background-position: center
    background-size: cover
    color #5452fe
.action_general_title
    margin-bottom: 20px
#sales
    text-align: center
    width 100%
    max-width 600px
    margin 0 auto
    padding 40px 20px
    background-color: rgba(#fff, .9);
    border-radius: 3px;
    box-shadow: 0 0 17px 0 rgba(0,0,0,.2);
.sales_title
    font-size: 26px;
    font-family: "HelveticaNeueCyrBold",sans-serif;
    line-height: 1.2;
    margin: 0 0 9px;
.sales_text
    font-size: 20px;
    font-family: "HelveticaNeueCyrRoman",sans-serif;
    color: rgba(85,94,124,.8);
    line-height: 1.45;
    span
        font-family: 'HelveticaNeueCyrBlack', sans-serif;
        color #000
.button_action
    margin: 25px auto 0
    max-width 400px