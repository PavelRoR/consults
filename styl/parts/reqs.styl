#requests
    padding 60px 0
.requests_title
    font-size: 32px;
    font-family: "HelveticaNeueCyrBold",sans-serif;
    color: #252525;
    line-height: 1.25;
    text-align: center;
    margin-bottom: 30px;
    &+p
        font-size: 18px;
        font-family: "HelveticaNeueCyrRoman",sans-serif;
        color: rgba(85,94,124,.8);
        line-height: 1.444;
        text-align: center;
        max-width: 515px;
        margin: 0 auto 30px;
.all_requests
    margin: 0 auto 40px;
    width: 100%;
    max-width: 220px;
    display: block;
    border: 2px solid rgba(40,53,160,.2);
    border-radius: 25px;
    text-align: center;
    height: 49px;
    line-height: 46px;
    font-size: 14px;
    font-family: "HelveticaNeueCyrBold",sans-serif;
    color: #5553fe;
    text-transform: uppercase;
    background-color: transparent
#all_requests
    display: none;
    padding-top: 20px;
.request_example
    border: 1px solid #e8e8e8;
    border-radius: 5px;
    background-color: #fff;
    position: relative;
    height: 192px;
    padding: 54px 40px;
    margin: 0 auto 53px;
    display: table;
    &:after
        content: '';
        display: block;
        width: 30px;
        height: 30px;
        border-top: 1px solid #e8e8e8;
        border-right: 1px solid #e8e8e8;
        background-color: #fff;
        position: absolute;
        top: -15px;
        left: 65px;
        -webkit-transform: rotate(-45deg);
        transform: rotate(-45deg);
    p
        font-size: 16px;
        font-family: "HelveticaNeueCyrItalic",sans-serif;
        color: rgba(37,37,37,.8);
        line-height: 1.7;
        display: table-cell;
        vertical-align: middle;